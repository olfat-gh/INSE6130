<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <com.github.ybq.android.spinkit.SpinKitView android:id="@+id/loading" android:layout_width="50.0dip" android:layout_height="50.0dip" android:layout_centerInParent="true" app:SpinKit_Color="@color/colorLoader" style="@style/SpinKitView.CubeGrid" />
        <androidx.recyclerview.widget.RecyclerView android:visibility="invisible"
            android:id="@+id/recycler_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>